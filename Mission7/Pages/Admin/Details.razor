@page "/admin/products/details/{id:long}"

<h3 class="bg-info text-white text-center p-1">Details</h3>

<table class="table table-striped table-bordered table-dark">
    <tbody> 
        <tr><th>Product ID:</th><td>@product.BookId</td></tr>
        <tr><th>Product Name:</th><td>@product.Title</td></tr>
        <tr><th>Publisher:</th><td>@product.Publisher</td></tr>
        <tr><th>Author:</th><td>@product.Author</td></tr>
        <tr><th>Category:</th><td>@product.Category</td></tr>
        <tr><th>Classification:</th><td>@product.Classification</td></tr>
        <tr><th>ISBN:</th><td>@product.Isbn</td></tr>
        <tr><th>Page Count:</th><td>@product.PageCount</td></tr>
        <tr><th>Price:</th><td>@product.Price</td></tr>
    </tbody>
</table>

<NavLink class="btn btn-warning" href="@EditURL">Edit</NavLink>
<NavLink class="btn btn-secondary" href="/admin/products">Back</NavLink>

@code {
    [Inject]
    public IBookstoreRepository repo { get; set; }

    [Parameter]
    public long ID { get; set; }
    public Books product { get; set; }
    protected override void OnParametersSet()
    {
        product = repo.books.FirstOrDefault(x => x.BookId == ID);
    }
    public string EditURL => $"/admin/products/edit/{product.BookId}";
}
