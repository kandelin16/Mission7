<h3>OrderTable</h3>

<table class="table table-sm table-striped table-bordered">
    <thead>
        <tr>
            <th colspan="5" class="text-center">@TableTitle</th>
        </tr>
    </thead>

    <tbody>
        @if (orders?.Count() > 0)
        {
            @foreach (Order order in orders)
            {
                <tr>
                    <td>@order.Name</td>
                    <td>@order.Zip</td>
                    <th>Books</th>
                    <th>Quantity</th>
                    <td>
                        <button class="btn btn-danger" @onclick="@(x => OrderSelected.InvokeAsync(order.OrderID))">
                            @ButtonLabel
                        </button>
                    </td>
                </tr>
                @foreach (CartItem item in order.Items)
                {
                    <tr>
                        <td colspan="2"></td>
                        <td>@item.book.Title</td>
                        <td>@item.Quantity</td>
                    </tr>
                }
            } 
        } 
        else
        {
            <tr>
                <td colspan="5">No orders</td>
            </tr>
        }
    </tbody>
</table>

@code {
    [Parameter]
    public string TableTitle { get; set; } = "Orders";

    [Parameter]
    public IEnumerable<Order> orders { get; set; }

    [Parameter]
    public string ButtonLabel { get; set; } = "Order Delivered";

    [Parameter]
    public EventCallback<int> OrderSelected { get; set; }
}
