@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
</div>
    @foreach (var book in ViewBag.books)
    {
        <div class="card card-outline-primary m-1 p-1">
            <div class="bg-faded p-1">
                <h4>
                    @book.Title
                    <span class="badge badge-pill badge-primary" style="float:right">
                        <small>@book.Price.ToString("c")</small>
                    </span>
                </h4>
            </div>
            <ul>
                <li>@book.Author</li>
                <li>@book.Publisher</li>
                <li>@book.Isbn</li>
                <li>@book.Classification</li>
                <li>@book.Category</li>
                <li>@book.PageCount</li>
            </ul>
        </div>
    }

<div page-model="@ViewBag.pageInfo" page-action="Index" page-class="btn" page-class-normal="btn-outline-dark"
     page-class-selected="btn-primary" class="btn-group pull-right m-1"></div>