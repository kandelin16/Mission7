@model Books

<div class="card card-outline-primary m-1 p-1">
    <div class="bg-faded p-1">
        <h4>
            @Model.Title
            <span class="badge badge-pill badge-primary" style="float:right">
                <small>@Model.Price.ToString("c")</small>
            </span>
        </h4>
    </div>
    <ul>
        <li>@Model.Author</li>
        <li>@Model.Publisher</li>
        <li>@Model.Isbn</li>
        <li>@Model.Classification</li>
        <li>@Model.Category</li>
        <li>@Model.PageCount</li>
    </ul>
    <form method="post" asp-page="/Purchase">
        <input type="hidden" asp-for="@Model.BookId"/>
        <input type="hidden" name="return-url" value="@ViewContext.HttpContext.Request.PathAndQuery()" />
        <span class="card-text"><button type="submit" class="btn btn-success btn-sm float-end">Add To Cart</button></span>
    </form>
</div>